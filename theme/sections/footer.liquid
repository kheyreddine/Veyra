{% comment %} 
  Footer Section 
  - Logo area, navigation menu, and social media icons 
  - Responsive layout: horizontal on desktop, stacked on mobile 
  - Uses BEM naming convention for clean, maintainable CSS 
{% endcomment %}

<!-- Import footer-specific styles -->
{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer" role="contentinfo">
  <div class="container">
    <div class="footer__content">

      <!-- Logo and Brand Area -->
      <div class="footer__brand">
        <a href="{{ routes.root_url }}" class="footer__brand-link">
          <h2 class="footer__brand-title">{{ shop.name }}</h2>
        </a>
        <p class="footer__brand-tagline">Modern fashion for the contemporary lifestyle</p>
      </div>

      <!-- Footer Navigation -->
      <nav class="footer__nav" role="navigation">
        <h3 class="footer__nav-title">Quick Links</h3>
        <ul class="footer__nav-list">
          <li class="footer__nav-item">
            <a href="{{ routes.collections_url }}" class="footer__nav-link">Shop</a>
          </li>
          <li class="footer__nav-item">
            <a href="/pages/about" class="footer__nav-link">About</a>
          </li>
          <li class="footer__nav-item">
            <a href="/pages/contact" class="footer__nav-link">Contact</a>
          </li>
        </ul>
      </nav>

      <!-- Social Media Links -->
      <div class="footer__social">
        <h3 class="footer__social-title">Follow Us</h3>
        <div class="footer__social-icons">
          <a
            href="#"
            class="footer__social-link"
            aria-label="Facebook">
            <svg
              class="footer__social-icon"
              viewBox="0 0 24 24"
              fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
            </svg>
          </a>

          <a
            href="#"
            class="footer__social-link"
            aria-label="Instagram">
            <svg
              class="footer__social-icon"
              viewBox="0 0 24 24"
              fill="currentColor">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.718-1.297c-.49.49-1.141.807-1.892.807-.751 0-1.402-.317-1.892-.807-.49-.49-.807-1.141-.807-1.892s.317-1.402.807-1.892c.49-.49 1.141-.807 1.892-.807.751 0 1.402.317 1.892.807.49.49.807 1.141.807 1.892s-.317 1.402-.807 1.892z" />
            </svg>
          </a>

          <a
            href="#"
            class="footer__social-link"
            aria-label="Twitter">
            <svg
              class="footer__social-icon"
              viewBox="0 0 24 24"
              fill="currentColor">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
            </svg>
          </a>
        </div>
      </div>

    </div>

    <!-- Copyright and Legal -->
    <div class="footer__bottom">
      <div class="footer__copyright">
        <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
      </div>

      <div class="footer__legal">
        <a href="/pages/privacy-policy" class="footer__legal-link">Privacy Policy</a>
        <a href="/pages/terms-of-service" class="footer__legal-link">Terms of Service</a>
      </div>
    </div>

  </div>
</footer>

